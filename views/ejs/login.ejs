<%- include('includes/start') %>
    <link rel="stylesheet" href="/css/login.css">

    </head>

    <body>
        <%-include('includes/navigation') %>
            <div class="content">
				<main>
					<%if(errorMessage.length){%>
						<div class="user-message user-message--error" style="visibility: hidden;"><%=errorMessage%></div>
					<%}%>
					<form action="/api/login" method="POST">
						<label for="username"><b>Username</b></label>
						<input type="text" placeholder="Enter your username" name="username"><br>
						<label for="psw"><b>Password</b></label>
						<input type="password" placeholder="Enter Password" name="psw" required>
						<hr>
						<input type="submit" name="submit" class="registerbtn" value="LOGIN">
						<div class="content login-box">
							<a href="/api/signIn" class="login-box_link">I forgot my password</a>
							<a href="/api/signIn" class="login-box_link">Don't have an account</a>
						</div>
					</form>	
				</main>
            </div>
            <%-include('includes/end')%>