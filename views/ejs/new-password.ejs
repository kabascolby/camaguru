<%- include('includes/start') %>
    <link rel="stylesheet" href="/css/login.css">

    </head>

    <body>
        <%-include('includes/navigation') %>
            <div class="content">
				<main>
					<%if(errorMessage.length){%>
						<div class="user-message user-message--error" style="visibility: hidden;"><%=errorMessage%></div>
					<%}%>
					<form action="/api/new-password" method="POST">
						<h1>Password Update</h1>
						<p>Please fill to update your password.</p>
						<hr>
						<label for="password"><b>Password</b></label>
						<input id="password" type="password" placeholder="Enter Password" name="password" required>
						<input id="confirm_password" type="password" placeholder="Re-Enter your Password" name="password2" required>
						<input type="hidden" name="userId" value="<%=userId%>">
						<input type="hidden" name="token" value="<%=token%>">
						<input type="submit" name="submit" class="registerbtn" value="Update Password">
					</form>	
				</main>
				<script src="/js/validation.js" type="module"></script>
            </div>
            <%-include('includes/end')%>